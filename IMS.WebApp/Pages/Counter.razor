@page "/counter"

@inject IViewInvertoriesByNameUseCase ViewInvertoriesByNameUseCase

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<br />

<ViewInvertoriesComponent OnSearchInvertories="OnSearchInvertories"></ViewInvertoriesComponent>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void OnSearchInvertories(List<Invertory> invertories)
    {
        
    }
}
